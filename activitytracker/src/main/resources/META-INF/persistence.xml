<persistence version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence">
    <persistence-unit name="pu" transaction-type="RESOURCE_LOCAL">
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="activitytracker_jpa"/>
            <property name="javax.persistence.jdbc.password" value="activitytracker_jpa"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3308/activitytracker_jpa"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>